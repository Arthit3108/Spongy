  <body class="text-center">
    
<div class="form-signin">
  <form action="/seller/signup" method="POST">
    <p class="head">Sign Up</p>

    <!--
      get errors from registerController
      have "=" show information in html
      not have "=" about logic
    -->
    <% if (errors != null && errors.length > 0) { %>
      <% for (let i = 0; i < errors.length; i++ ) { %>
        <p class="alert alert-danger"><%= errors[i] %></p>
           
      <% } %>  
    <% } %>
    
      
    

    <div class="form-floating">
      <input type="text" name="storename" value="<%= storename %>" class="form-control" id="floatingStore" placeholder="Store Name" required>
      <!-- <label for="floatingStore">Store Name</label> -->
    </div>

    <div class="form-floating">
      <input type="tel" name="tel" value="<%= tel %>" class="form-control" id="floatingTel" placeholder="xxxxxxxxxx" pattern="[0-9]{10}" required>
      <!-- <label for="floatingTel">Phone Number</label> -->
    </div>

    <div class="form-floating">
      <input type="email" name="email" value="<%= email %>" class="form-control" id="floatingInput" placeholder="name@example.com" required>
      <!-- <label for="floatingInput">Email address</label> -->
    </div>

    <div class="form-floating">
      <input type="password" name="password" value="<%= password %>" class="form-control" id="floatingPassword" placeholder="Password" required>
      <!-- <label for="floatingPassword">Password</label> -->
    </div>

    <div class="button_1">
      <!-- <label>
        <input type="checkbox" value="remember-me"> Remember me
      </label> -->
      <div class="waring-signup-seller">
        <label>
        <% if( warning != null) { %>
            <p class="alert alert-danger"><%= warning %></p> 
        <% } %>
        </label>
      </div>
      <button class="btn" type="submit"> > </button>
    </div>
    
    <!-- <p class="mt-5 mb-3 text-muted">&copy; 2017–2021</p> -->
  </form>
</div>
